#left-rail
	height 100%
	color #fff
	overflow-x hidden
	#header-container
		height header_height
		width 100%
		background-color #000
		padding 3px 0 0 0
		user-select none
		a
			text-decoration none
			color #ccc 
			display inline-block
		a:hover h1
			color #fff
		img, h1.page-title
			position relative
		img
			height 45px
			width @height
		h1.page-title
			font-size 2.5em
			margin 0
			padding 0
			font-weight 200
			display inline-block
			vertical-align text-bottom
			top -8px
			width 106px
		.settings
			display inline-block
			position relative
			top -13px
			width 37%
			text-align right
			vertical-align text-bottom
			.admin-item
				display inline-block
				vertical-align middle
				width 33px
				text-algn left
			a
				padding 0 7px 0 7px
				color #9e9e9e
				.octicon
					font-size 18px
			a:hover
				color #fff
	.section-options[data-section-options="articles"]
		overflow-y scroll
		overflow-x hidden
		height 'calc(100vh - %s)' % (header_height + section_li_height*2 + section_nav_margin_top)
		
.main-sections
	margin-top 10px
	li
		user-select none
	.section.active .nav-link
		text-shadow 0 0px 12px #535353
	.section.active:hover
		cursor default
	input, select
		width 100%
		display inline-block
	.section-options, .nav-link, a:not(.out-link)
		padding 10px 25px
	.section-options,.section-subnav
		background-color bg_gray
		color #fff
	.nav-link,a
		color #f2f2f2
	.nav-link, a:not(.out-link)
		font-size 2em
		font-weight 100
		display block
		text-decoration none
	a:hover:not(.out-link)
		cursor pointer
		background-color highlight_gray
	.section.active .nav-link:hover
		cursor default
	.tag-wrapper:hover .tag-container
		background-color #A1A1A1
	.option-container
		input
			min-height 0 // Reset these values to override our default min-height 34px
			height 28px
			background-color #fff
			padding 0 8px
	.option-container[data-type="date-range"]
		input
			width 45%
			font-size 1.1em
		input[data-dir="before"]
			float right
	.section-img
		float right
		padding-top 2px
		width 20px
		img
			width 100%