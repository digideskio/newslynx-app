input_height = 34px

input[type="search"]
	appearance searchfield

button,
input[type="button"],
input.destroy
	color #333
	background-color #EEE
	background-image linear-gradient(#FCFCFC, #EEE)
	border 1px solid #D5D5D5

button,
input[type="button"],
input[type="submit"],
input.destroy
	padding 5px 8px
	font-weight bold
	text-shadow 0px 1px 0px rgba(255, 255, 255, 0.9)
	white-space nowrap
	border-radius 3px

.pika-button.pika-day
	font-weight normal

.pika-title
	button
		text-shadow none
	
button,
input[type="button"],
input[type="submit"],
input.destroy,
select
	margin 0
	position relative
	display inline-block
	font-size 13px
	vertical-align top
	cursor pointer
	background-repeat repeat-x
	-moz-user-select none

input[type="button"]
	margin-right 3px
	
select
	font-size 12px !important

button.mini,
input[type="button"].mini
	padding 0 6px
	font-size 12px

select
	padding 1px 8px !important
	text-shadow none

textarea
	font-family "Helvetica Neue","Lucida Grande", Helvetica, Arial, sans-serif
	font-size 12px
	padding 3px
	box-shadow 1px 2px 1px 0px #ededed inset
	min-height 50px
	margin 10px
	overflow auto
	width 300px    
	border 1px solid #aaa

input[type="submit"]
	color #FFF
	text-shadow 0px -1px 0px rgba(0, 0, 0, 0.25)
	background-color #60B044
	background-image linear-gradient(#8ADD6D, #60B044)
	background-repeat repeat-x
	border 1px solid #5CA941

input.destroy
	color #900
	float right

button:hover,
input[type="button"]:hover,
input[type="submit"]:hover,
input.destroy:hover
	cursor pointer

button:not(.pika-prev):not(.pika-next):hover,
input[type="button"]:hover
	text-decoration none
	background-image linear-gradient(#EEE, #DDD)
	background-repeat repeat-x
	border-color #CCC
	
button:hover,
input[type="button"]:hover
	background-color #DDD

input.destroy:hover
	color #900
	color #FFF
	text-shadow 0px -1px 0px rgba(0, 0, 0, 0.3)
	background-color #B33630
	background-image linear-gradient(#DC5F59, #B33630)
	background-repeat repeat-x
	border-color #CD504A

input[type="submit"]:hover
	color #FFF
	background-color #569E3D
	background-image linear-gradient(#79D858, #569E3D)
	background-repeat repeat-x
	border-color #4A993E

button:active,
input[type="button"]:active
	background-color #dcdcdc
	background-image none
	border-color #b5b5b5
	box-shadow inset 0 2px 4px rgba(0,0,0,0.15)

input[type="submit"]:active
	background-color #569e3d
	background-image none
	border-color #418737

input.destroy:active
	color #fff
	background-color #b33630
	background-image none
	border-color #9f312c

.disabled button,
.disabled input,
button.disabled,
input[type="button"].disabled
	opacity .4
	pointer-events none
	
.disabled:hover button,
.disabled:hover button:hover,
.disabled:hover input[type="button"],
.disabled:hover input[type="button"]:hover,
.disabled:hover
	cursor default !important

input[type="text"],
input[type="password"],
input[type="number"],
textarea,
.sp-replacer
	margin-left 0
	background-color input_background
	color #333
	padding 7px 8px
	min-height input_height
	box-shadow 0px 1px 2px rgba(0, 0, 0, 0.075) inset
	outline medium none
	border-radius 3px
	border 1px solid #CCC
	background-position right center
	background-repeat no-repeat
	font-size 1.3em
	&:focus
		background-color #fff
		border-color #51A7E8
		box-shadow 0px 1px 2px rgba(0, 0, 0, 0.075) inset, 0px 0px 5px rgba(81, 167, 232, 0.5)
	
label
	user-select none

input
	margin-bottom 5px
	
.loading-spinner
	background-image url(../images/gifs/arrows-transparent.gif)
	background-repeat no-repeat
	background-position 77px center
	min-height 2em
	display inline-block
	margin 0 auto
	background-size auto 65%
	padding-right 25px
