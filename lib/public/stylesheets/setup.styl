input[type="text"],
input[type="password"],
label
  width 75% !important
  display table
  margin 0 auto !important
label
  font-size 1.3em
  &:hover
    cursor pointer
input[type="submit"]
  margin-top 10px
  width 65%
  display table
  margin 15px auto 0 auto
  height 35px
.msg
  font-size 1.3em
  margin-top 10px
  text-align center
  font-style italic
  color #989898
.msg.fail
  color disabled_red
