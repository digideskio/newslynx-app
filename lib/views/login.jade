extends layout

block drawer
	.division-title Log-in
	.division-description 
		p Sign in here with your NewsLynx user credentials.
		p If you'd like an account, email us at 
			a(href="mailto:signup@newslynx.org") signup@newslynx.org.

block content
	if info.authed
		.msg You have successfully logged in!
	else
		form(action='/auth/_VERSION/login', method='POST')#login
			div
				label Email: 
				input(type='text', name='email')
			div
				label Password: 
				input(type='password', name='password')
			div
				input(type='submit', value='Log In')
			if info.msg
				.msg
					=info.msg