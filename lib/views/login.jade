doctype html
html
	head
		title NewsLynx | 
			= info.title
		link(rel='stylesheet', href='/stylesheets/css/#{info.page}.css')
	body(data-section="#{info.page}")
		#main-wrapper
			#form-container
				.modal-outer
					.modal-inner
						.modal-title Sign in to 
							span NewsLynx!
						if info.msg
							.msg 
								=info.msg
						form(action='/auth/_VERSION/login', method='POST')#login
							.form-row
								//- .form-row-label-container
								//- 	label Email: 
								input(type='text', name='email' placeholder="you@domain.com")
							.form-row
								//- .form-row-label-container
								//- 	label Password: 
								input(type='password', name='password' placeholder="password")
							input(type='submit', value='Log In')
